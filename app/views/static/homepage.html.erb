<div class='row'>
  <div class='col-md-12'>
    <h1>Welcome To The Homepage!</h1>
  </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <p>Select your area to view latest featured ads.</p>
    <p> dummy here 1st </p>
  </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <h3>Featured Ads</h3>
  </div>
</div>

<hr>

<% @featured_ads.each do |ad| %>
  <div class="row">
    <div class="col-md-4">
      <% if !ad.pictures.nil? && ad.pictures[0].present? %>
        <%= image_tag ad.pictures[0].thumb.url %>
      <% else %>
        <p> No image provided </p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3><%= link_to ad.title, ad %></h3>
      <p><%= ad.condition %></p>
    </div>
    <div class='col-md-2'>
      <p>RM<%= ad.price %></p>
    </div>
  </div>
  <hr>
<% end %>

<% if !current_user.nil? && !current_user.type.present? %>
  <div class='row'>
    <div class='col-md-12'>
      <h3>Want your ads being show here? Click here to upgreade your account to ProUser!</h3>
    </div>
  </div>
<% end %>