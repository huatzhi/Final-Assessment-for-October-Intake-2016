<hr>
<% @index.each do |ad| %>
  <div class="row">
    <div class="col-md-4">
      <% if !ad.pictures.nil? && ad.pictures[0].present? %>
        <%= image_tag ad.pictures[0].thumb.url %>
      <% else %>
        <p> No image provided </p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3><%= link_to ad.title, ad %></h3>
      <p><%= ad.condition %></p>
    </div>
    <div class='col-md-2'>
      <p>RM<%= ad.price %></p>
    </div>
  </div>
  <hr>
<% end %>